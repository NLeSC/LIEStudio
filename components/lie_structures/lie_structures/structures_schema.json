{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://liestudio/schemas/structures_schema.json",
    "title": "Cheminformatics tools",
    "description": "Small molecule cheminformatics tools",
    "type": "object",
    "properties": {
        "indy_path": {
            "type": "string",
            "description": "Path to Indigo installation",
            "default": "/Users/mvdijk/Documents/WorkProjects/liestudio-master/liestudio/bin/indigo-python-1.3.0beta.r16-mac"
        },
        "rdk_path": {
            "type": "string",
            "description": "Path to RDKit installation",
            "default": "/Users/mvdijk/Documents/WorkProjects/liestudio-master/liestudio/bin/RDkit"
        },
        "mol": {
            "type": "string",
            "description": "Moleculare file"
        },
        "input_format": {
            "type": "string",
            "description": "Structure input file format"
        },
        "output_format": {
            "type": "string",
            "description": "Structure output file format"
        },
        "correctForPH": {
            "type": "boolean",
            "description": "Correct for pH when adding hydrogens to the structure",
            "default": false
        },
        "pH": {
            "type": "number",
            "description": "Target pH to correct for when adding hydrogens to the structure",
            "default": 7.4
        },
        "polaronly": {
            "type": "boolean",
            "description": "Only add polar hydrogens to the structure",
            "default": false
        },
        "forcefield": {
            "type": "string",
            "description": "Forcefield for small ligand optimization",
            "default": "mmff94"
        },
        "steps": {
            "type": "integer",
            "description": "Number of steps for optimization",
            "default": 50
        },
        "localopt": {
            "type": "boolean",
            "description": "Perform local optimization of the structure",
            "default": true
        }
    },
    "required": ["mol"]
}